--[ Tab System - Now in frame2 (right panel) ]--
local tabsContainer = Instance.new("Frame")
tabsContainer.Size = UDim2.new(0.9, 0, 0.8, 0)
tabsContainer.Position = UDim2.new(0.05, 0, 0.1, 0)
tabsContainer.BackgroundTransparency = 1
tabsContainer.Parent = frame2

local tabsLayout = Instance.new("UIListLayout")
tabsLayout.FillDirection = Enum.FillDirection.Vertical
tabsLayout.Padding = UDim.new(0, 5)
tabsLayout.Parent = tabsContainer

-- Create content frames for tabs (in frame1)
local contentFrame1 = Instance.new("Frame")
contentFrame1.Size = UDim2.new(1, 0, 1, 0)
contentFrame1.BackgroundTransparency = 1
contentFrame1.Visible = true
contentFrame1.Parent = frame1

local contentFrame2 = Instance.new("Frame")
contentFrame2.Size = UDim2.new(1, 0, 1, 0)
contentFrame2.BackgroundTransparency = 1
contentFrame2.Visible = false
contentFrame2.Parent = frame1

local contentFrame3 = Instance.new("Frame")
contentFrame3.Size = UDim2.new(1, 0, 1, 0)
contentFrame3.BackgroundTransparency = 1
contentFrame3.Visible = false
contentFrame3.Parent = frame1

-- Function to create 4 buttons in a content frame
local function createTabContent(contentFrame, tabName)
    -- Clear any existing content
    for _, child in ipairs(contentFrame:GetChildren()) do
        child:Destroy()
    end

    -- Create container for buttons
    local buttonContainer = Instance.new("Frame")
    buttonContainer.Size = UDim2.new(0.9, 0, 0.8, 0)
    buttonContainer.Position = UDim2.new(0.05, 0, 0.1, 0)
    buttonContainer.BackgroundTransparency = 1
    buttonContainer.Parent = contentFrame

    local buttonLayout = Instance.new("UIListLayout")
    buttonLayout.FillDirection = Enum.FillDirection.Vertical
    buttonLayout.Padding = UDim.new(0, 10)
    buttonLayout.Parent = buttonContainer

    -- Create 4 buttons for this tab
    for i = 1, 4 do
        local button = Instance.new("TextButton")
        button.Size = UDim2.new(1, 0, 0.2, 0)
        button.BackgroundColor3 = Color3.new(0.2, 0.4, 0.2) -- Greenish color
        button.Text = tabName.." Action "..i
        button.TextColor3 = Color3.new(1, 1, 1)
        button.TextSize = 14
        button.Parent = buttonContainer
        
        local buttonCorner = Instance.new("UICorner")
        buttonCorner.CornerRadius = UDim.new(0, 4)
        buttonCorner.Parent = button
        
        -- Example button functionality
        button.MouseButton1Click:Connect(function()
            print(tabName.." Action "..i.." activated!")
        end)
    end

    -- Add title label
    local titleLabel = Instance.new("TextLabel")
    titleLabel.Text = tabName.." Controls"
    titleLabel.Size = UDim2.new(1, 0, 0.1, 0)
    titleLabel.Position = UDim2.new(0, 0, 0, 0)
    titleLabel.TextColor3 = Color3.new(1, 1, 1)
    titleLabel.BackgroundTransparency = 1
    titleLabel.TextSize = 18
    titleLabel.Font = Enum.Font.SourceSansBold
    titleLabel.Parent = contentFrame
end

-- Create tab buttons in right panel (frame2)
local tabButtons = {}

local function createTabButton(name, contentFrame)
    local tabButton = Instance.new("TextButton")
    tabButton.Size = UDim2.new(1, 0, 0.15, 0)
    tabButton.BackgroundColor3 = Color3.new(0.2, 0.2, 0.2)
    tabButton.Text = name
    tabButton.TextColor3 = Color3.new(1, 1, 1)
    tabButton.TextSize = 14
    tabButton.Parent = tabsContainer
    
    local tabCorner = Instance.new("UICorner")
    tabCorner.CornerRadius = UDim.new(0, 4)
    tabCorner.Parent = tabButton
    
    tabButton.MouseButton1Click:Connect(function()
        -- Hide all content frames
        contentFrame1.Visible = false
        contentFrame2.Visible = false
        contentFrame3.Visible = false
        
        -- Show the selected content frame
        contentFrame.Visible = true
        
        -- Update tab button appearances
        for _, btn in pairs(tabButtons) do
            btn.BackgroundColor3 = Color3.new(0.2, 0.2, 0.2)
        end
        tabButton.BackgroundColor3 = Color3.new(0.3, 0.3, 0.3)
    end)
    
    table.insert(tabButtons, tabButton)
    return tabButton
end

-- Create tabs and their content
local tab1 = createTabButton("Main", contentFrame1)
createTabContent(contentFrame1, "Main")

local tab2 = createTabButton("Tools", contentFrame2)
createTabContent(contentFrame2, "Tools")

local tab3 = createTabButton("Settings", contentFrame3)
createTabContent(contentFrame3, "Settings")

-- Set first tab as active initially
tab1.BackgroundColor3 = Color3.new(0.3, 0.3, 0.3)

-- Dragging functionality
local dragInput
local dragStart
local startPositions = {}

local function updatePositions(delta)
    frame1.Position = UDim2.new(
        startPositions.frame1.X.Scale,
        startPositions.frame1.X.Offset + delta.X,
        startPositions.frame1.Y.Scale,
        startPositions.frame1.Y.Offset + delta.Y
    )
    frame2.Position = UDim2.new(
        startPositions.frame2.X.Scale,
        startPositions.frame2.X.Offset + delta.X,
        startPositions.frame2.Y.Scale,
        startPositions.frame2.Y.Offset + delta.Y
    )
    frame3.Position = UDim2.new(
        startPositions.frame3.X.Scale,
        startPositions.frame3.X.Offset + delta.X,
        startPositions.frame3.Y.Scale,
        startPositions.frame3.Y.Offset + delta.Y
    )
    frame4.Position = UDim2.new(
        startPositions.frame4.X.Scale,
        startPositions.frame4.X.Offset + delta.X,
        startPositions.frame4.Y.Scale,
        startPositions.frame4.Y.Offset + delta.Y
    )
end

frame3.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragStart = input.Position
        startPositions = {
            frame1 = frame1.Position,
            frame2 = frame2.Position,
            frame3 = frame3.Position,
            frame4 = frame4.Position
        }
        
        local connection
        connection = input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                connection:Disconnect()
            end
        end)
    end
end)

frame3.InputChanged:Connect(function(input)
    if (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) and dragStart then
        dragInput = input
    end
end)

game:GetService("UserInputService").InputChanged:Connect(function(input)
    if input == dragInput and dragStart then
        local delta = input.Position - dragStart
        updatePositions(delta)
    end
end)

local isMinimized = false

closeButton.MouseButton1Click:Connect(function()
    screenGui:Destroy()
end)

minimizeButton.MouseButton1Click:Connect(function()
    isMinimized = not isMinimized
    frame1.Visible = not isMinimized
    frame2.Visible = not isMinimized
    frame4.Visible = not isMinimized
end)
