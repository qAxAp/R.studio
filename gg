-- Improved dragging for both PC and mobile
local dragInput
local dragStart
local startPos

local function updatePosition(input)
    local delta
    if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
        delta = input.Position - dragStart
        local newPosition = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        frame1.Position = newPosition
        frame2.Position = UDim2.new(newPosition.X.Scale + 0.155, frame2.Position.X.Offset, newPosition.Y.Scale + 0.082, frame2.Position.Y.Offset)
        frame3.Position = UDim2.new(newPosition.X.Scale, frame3.Position.X.Offset, newPosition.Y.Scale - 0.046, frame3.Position.Y.Offset)
        frame4.Position = UDim2.new(newPosition.X.Scale - 0.009, frame4.Position.X.Offset, newPosition.Y.Scale + 0.082, frame4.Position.Y.Offset)
    end
end

frame3.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragStart = input.Position
        startPos = frame1.Position
        
        local connection
        connection = input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                connection:Disconnect()
                dragStart = nil
            end
        end)
    end
end)

frame3.InputChanged:Connect(function(input)
    if (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) and dragStart then
        dragInput = input
    end
end)

game:GetService("UserInputService").InputChanged:Connect(function(input)
    if input == dragInput and dragStart then
        updatePosition(input)
    end
end)

local isMinimized = false

closeButton.MouseButton1Click:Connect(function()
    screenGui:Destroy()
end)

minimizeButton.MouseButton1Click:Connect(function()
    if isMinimized then
        frame1.Visible = true
        frame2.Visible = true
        frame4.Visible = true
    else
        frame1.Visible = false
        frame2.Visible = false
        frame4.Visible = false
    end
    isMinimized = not isMinimized
end)
